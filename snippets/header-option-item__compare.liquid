{% unless settings.product_compare_page == blank %}
  <a
    href="{{ pages[settings.product_compare_page].url }}"
    class="m-header__compare{% if box_size != blank %} {{ box_size }}{% endif %}"
  >
    {% if display_by == 'icon' %}
      <span class="m-tooltip m:block m-tooltip--bottom m-tooltip--style-2">
        <svg class="m-svg-icon--medium" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
          <path fill="currentColor" d="M164 384h-44V48a16 16 0 0 0-16-16H88a16 16 0 0 0-16 16v336H28a12 12 0 0 0-8.73 20.24l68 72a12 12 0 0 0 17.44 0l68-72A12 12 0 0 0 164 384zm200.72-276.24l-68-72a12 12 0 0 0-17.44 0l-68 72A12 12 0 0 0 220 128h44v336a16 16 0 0 0 16 16h16a16 16 0 0 0 16-16V128h44a12 12 0 0 0 8.72-20.24z" class=""></path>
        </svg>
        <span class="m-tooltip__content">{{ 'layout.compare.title' | t }}</span>
      </span>
    {% else %}
      {{ 'layout.compare.title' | t }}
    {% endif %}
    <sup class="m-compare-count m:hidden"></sup>
  </a>
{% endunless %}
