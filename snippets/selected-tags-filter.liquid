{% if current_tags.size > 0 %}
  <div class="m-active-facets m:flex m:flex-wrap m:items-center{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
    <ul id="ActiveFacets" class="m:flex m:flex-wrap">
      {%- for tag in current_tags -%}
        <li class="m-active-facets--item" data-tag-filter>
          <span class="m-active-facets--remove-icon">
            <svg class="m-svg-icon" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
              <path d="M193.94 256L296.5 153.44l21.15-21.15c3.12-3.12 3.12-8.19 0-11.31l-22.63-22.63c-3.12-3.12-8.19-3.12-11.31 0L160 222.06 36.29 98.34c-3.12-3.12-8.19-3.12-11.31 0L2.34 120.97c-3.12 3.12-3.12 8.19 0 11.31L126.06 256 2.34 379.71c-3.12 3.12-3.12 8.19 0 11.31l22.63 22.63c3.12 3.12 8.19 3.12 11.31 0L160 289.94 262.56 392.5l21.15 21.15c3.12 3.12 8.19 3.12 11.31 0l22.63-22.63c3.12-3.12 3.12-8.19 0-11.31L193.94 256z"/>
            </svg>
          </span>
          {{- tag | link_to_remove_tag: tag -}}
        </li>
      {%- endfor -%}
      <li class="m-active-facets--item m-active-facets--item-remove-all" data-tag-filter>
        <a 
          class="m-active-facets--remove-all"
          aria-label="{{ 'collections.sidebar.clear_all' | t }}"
          href="{{ collection.url }}?sort_by={{ collection.sort_by }}"
        >
          {{ 'collections.sidebar.clear_all' | t }}
        </a>
      </li>
    </ul>
  </div>
{% endif %}
