{{ 'grid.css' | asset_url | stylesheet_tag }}
{{ 'base.css' | asset_url | stylesheet_tag }}
{{ 'password.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .m-password-page {
    background-color:{{ section.settings.bg_color }};

    {%- if section.settings.image != blank -%}
    background-image: url({{ section.settings.image | image_url: width: 2048 }});
    background-size: cover; 
    background-repeat: no-repeat; 
    background-position: center;
    {%- endif -%}
  }
{%- endstyle -%}
<div class="m-password-page m-bg-lazy">
  {% if section.settings.show_logo %}
    {% if section.settings.image_l != blank %}
      <div class="m-password-page__logo" style="width: {{ section.settings.logo_max_width }}px;">
        {%- render 'responsive-image', image: section.settings.image_l, class_image: 'm:w-full' -%}
      </div>
    {% endif %}
  {% endif %}
  {% if section.settings.t1 != blank %}<h1 class="m-password-page__heading">{{ section.settings.t1 }}</h1>{% endif %}
  {% if section.settings.t2 != blank %}<div class="m-password-page__description">{{ section.settings.t2 }}</div>{% endif %}
  {% if section.settings.show_n %}
    {% if section.settings.n_t1 != blank %}<h2 class="m-password-page__form-heading">{{ section.settings.n_t1 }}</h2>{% endif %}
    {%- form 'customer', class: 'm-password-page__form m-newsletter-form m:w-full md:m:w-1/2 lg:m:w-4/12' -%}
      <div class="m-password-page__form-wrapper">
        <input type="hidden" name="contact[tags]" value="newsletter">
        <span>{%- render 'icon', name: 'envelope-regular', size: 'small' -%}</span>
        <input 
          type="email" 
          name="contact[email]" 
          class="form-field form-field--input form-field form-field--input__icon" 
          value="" 
          placeholder="{{ section.settings.n_t2 }}" 
          autocomplete="off" 
          autocapitalize="off" 
          spellcheck="false">
        <button type="submit" name="commit" aria-label="Submit">{%- render 'icon', name: 'arrow-right-regular', size: 'small' -%}</button>
      </div>
      {%- capture success_message -%}
        {{ 'contact.form.post_success' | t }}
      {%- endcapture -%}
      {% render 'form__success', form: form, success_message: success_message %}
      {% render 'form__error', form: form %}
    {%- endform -%}
  {% endif %}
  {% if section.settings.show_p %}
    {% if section.settings.p_t1 != blank %}<h2 class="m-password-page__form-heading">{{ section.settings.p_t1 }}</h2>{% endif %}
    {% form 'storefront_password', class: 'm-password-page__form m-password-form m:w-full md:m:w-1/2 lg:m:w-4/12' %}
      <div class="m-password-page__form-wrapper">
        <span>{%- render 'icon', name: 'lock-regular', size: 'small' -%}</span>
        <input type="password" name="password" class="form-field form-field--input form-field form-field--input__icon" id="inputPassword2" placeholder="{{ section.settings.p_t2 }}">
        <button type="submit" name="commit" aria-label="Submit">{%- render 'icon', name: 'arrow-right-regular', size: 'small' -%}</button>
      </div>
    {{ form.errors | default_errors }}
    {% endform %}
  {% endif %}
  {% if section.settings.f_t1 != blank %}
    <div class="m-copyright"><p>{{ section.settings.f_t1 }}</p></div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Main Password",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f5f1ed"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Show logo",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image_l",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_max_width",
      "label": "Logo Main width (in pixels)",
      "default": "175"
    },
    {
      "type": "header",
      "content": "Texts"
    },
    {
      "type": "html",
      "id": "t1",
      "label": "Title",
      "default": "Website is coming soon"
    },
    {
      "type": "html",
      "id": "t2",
      "label": "Description",
      "default": "Successful brands get into the mind slowly. A blurb in a magazine. A mention in a newspaper. A comment from a friend."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_n",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "textarea",
      "id": "n_t1",
      "label": "Title",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "textarea",
      "id": "n_t2",
      "label": "Form Text",
      "default": "Enter your e-mail"
    },
    {
      "type": "header",
      "content": "Password"
    },
    {
      "type": "checkbox",
      "id": "show_p",
      "label": "Show password",
      "default": false
    },
    {
      "type": "textarea",
      "id": "p_t1",
      "label": "Title",
      "default": "Enter the password to get access to the site"
    },
    {
      "type": "textarea",
      "id": "p_t2",
      "label": "Form Text",
      "default": "Enter Password"
    },
    {
      "type": "header",
      "content": "Footer"
    },
    {
      "type": "textarea",
      "id": "f_t1",
      "label": "Copyright",
      "default": "&copy; Minimog 2021. All Rights Reserved"
    }
  ]
}
{% endschema %}
