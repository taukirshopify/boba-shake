        "value": "btn-primary",
        "label": "Primary "
      },
      {
        "value": "btn-secondary",
        "label": "secondary"
      }
    ],
    "default": "btn-primary"
  }
,  
  {
    "type": "text",
    "id": "btn",
    "label": "Button title",
    "default": "SHOP NU"
  },
  {
    "type": "url",
    "id": "link",
    "label": "Benner link"
  }
    ],
    "presets": [
      {
        "name": "Home banner"}
      ]
  }
{% endschema %}

