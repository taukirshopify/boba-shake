<div class="feature-list section-id-{{ section.id }}">
     <div class="container-xxl">
       <div class="row">
      {% for i in section.blocks %}
        <div class="col-md-6 col-lg-3">
          <div class="singel-feature-list text-center">
        
              <img src="{{ i.settings.bg | img_url:'master' }}" alt="">

             <h6 class="poppins-bold">{{ i.settings.h5 }}</h6>
             <p>{{ i.settings.p  }}</p>
          </div>
       </div>
      {% endfor %}
      </div>
    </div>
</div>

<style>
  .singel-feature-list{
   padding:1.5% ;
  }
  .feature-list {
    margin-top: 8px;
    margin-bottom: 1.5%;
}
.singel-feature-list p{
 color:rgba(30, 30, 30, 0.5);
 margin-top:8px
