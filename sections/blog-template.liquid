      "max": 6,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "categories",
      "name": "Widget categories",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Categories"
        },
        {
          "type": "link_list",
          "id": "list_blog",
          "label": "Select categories menu"
        }
      ]
    },
    {
      "type": "instagram",
      "name": "Widget Instagram",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Instagram"
        },
        {
          "type": "range",
          "min": 4,
          "max": 24,
          "step": 1,
          "id": "images_count",
          "label": "Images to show",
          "default": 4
        }
      ]
    },
    {
      "type": "tags",
      "name": "Widget tags",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Tags"
        }
      ]
    },
    {
      "type": "recent_post",
      "name": "Widget recent posts",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Recent Post"
        },
        {
          "type": "blog",
          "id": "sidebar_recent_blog_name",
          "label": "Blog Name"
        },
        {
          "type": "text",
          "id": "sidebar_recent_blog_count",
          "label": "Post Count",
          "info": "Integer",
          "default": "3"
        },
        {
          "type": "checkbox",
          "id": "blog_show_tags",
          "label": "Show tags",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "blog_show_author",
          "label": "Show author",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "blog_show_date",
          "label": "Show date",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "show_excerpt",
          "label": "Show excerpt",
          "default": false
        },
        {
          "type": "paragraph",
          "content": "Show \"Content\" instead if \"Excerpt\" is empty."
        },
        {
          "type": "checkbox",
          "id": "truncate_excerpt",
          "label": "Truncate Excerpt",
          "default": false
        },
        {
          "type": "text",
          "id": "truncate",
          "label": "Show Words",
          "default": "15",
          "info": "Integer"
        },
        {
