    },
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show sidebar",
      "default": true
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Placement",
      "default": "right_column",
      "options": [
        {
          "value": "left_column",
          "label": "Left column"
