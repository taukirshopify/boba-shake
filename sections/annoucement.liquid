<style>
  .new-announcement.section-id-{{ section.id }} {
    background: {{ section.settings.bg }};
    color: {{ section.settings.color }};
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    padding-top: 10px;
    padding-bottom: 10px;
    column-gap: 24px;
}
  .section-id-{{ section.id }} .ann-items {
    display: flex;
    column-gap: 24px;
    flex-wrap: nowrap;
    justify-content: space-between;
    flex-shrink: 0;
    animation: carouselAnimation infinite linear;
    animation-duration: {{section.settings.timer}}s;
    font-size: {{ section.settings.font-size }}px;
}
.ann-item {
    display: flex;
    align-items: center;
    column-gap: 10px;
}
 .section-id-{{ section.id }} .ann-item svg {
    height: {{ section.settings.icon-size }}px;
    width: {{ section.settings.icon-size }}px;
    color: {{ section.settings.color }};
}
 .section-id-{{ section.id }} .ann-item img {
    height: {{ section.settings.icon-size }}px;
}
  @keyframes carouselAnimation{
  0%{
      transform: translateX(0%)
  }
  100%{
      transform: translateX(-100%)
  }
  }
</style>
{% schema %}
  {
    "name": "Announcement bar",
    "settings": [
      {
        "type": "color",
        "id":"bg",
        "label": "Section background color",
        "default": "#F3DEC3"
      },
      {
        "type": "color",
        "id":"color",
        "label": "Text color",
        "default": "#000000"
      },
      {
        "type": "range",
        "id":"timer",
        "label": "Announcement animation speed",
        "default": 20,
        "max": 60,
        "min": 1,
        "step": 1,
        "unit": "S"
      },
      {
        "type": "range",
        "id":"font-size",
        "label": "Font Size",
        "default": 14,
        "max": 60,
        "min": 10,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id":"icon-size",
        "label": "Icon Size",
        "default": 20,
        "max": 60,
        "min": 10,
        "step": 1,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "Block",
        "name": "Announcement Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Image Icon"
          },
          {
            "type": "html",
            "id": "svg",
            "label": "Html Icon"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Title ",
            "default": "<p>Free Shipping</p>"
          }
        ]
      }
    ]
  }
{% endschema %}
