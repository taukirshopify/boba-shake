{{ 'product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign product = all_products[section.settings.featured_product]
  assign first_3d_model = product.media | where: 'media_type', 'model' | first

  if product == empty
    assign section_onboarding = true
  endif

  assign bg_color = section.settings.background_color
  assign has_bg = false

  unless bg_color == 'rgba(0,0,0,0)' or bg_color == blank
    assign has_bg = true
  endunless

  assign image_placement = section.settings.image_placement

  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif

  assign container = section.settings.container
  if container == 'w-full'
    assign container = 'container-full'
  endif
-%}
{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}

{% capture onboarding %}
  <div class="m-product-info--wrapper m:text-color-body">
    <div class="main-product__block main-product__block-title">
      <a class="m-product-title" href="#">
        {{ 'homepage.onboarding.product_title' | t }}
      </a>
    </div>
    <div class="main-product__block main-product__block-price">
      <span class="m:text-xl">
        {{ 1999 | money }}
      </span>
    </div>
    <div class="main-product__block main-product__block-description m-product-description">
      {{ 'homepage.onboarding.product_description' | t }}
    </div>
    <div class="main-product__block main-product__block-buy_buttons">
      <button type="submit" class="m-add-to-cart m-button m-button--primary m:w-full">
        <span>{{ 'products.product.add_to_cart' | t }}</span>
      </button>
    </div>
  </div>
{% endcapture %}

<div
  id="m-featured-product-{{ section.id }}"
  data-section-type="featured-product"
  data-section-id="{{ section.id }}"
  class="m-section m-featured-product {{ section.settings.custom_class }} {{ first_3d_model }}"
  {% if has_bg %}
    data-bg="{{ bg_color | color_to_hsl }}"
  {% endif %}
  style="
    background-color: {{ bg_color }};
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="{{ container }}{% if has_bg == false %} m-section-my{% else %} m-section-py{% endif %}">
    <div
      class="m:flex m:flex-wrap m-main-product--wrapper"
      data-view="featured-product"
      style="--column-gap: {{ section.settings.column_gap }}px; --column-gap-mobile: {{ section.settings.column_gap_mobile }}px;"
    >
      <div class="m:column md:m:w-1/2 m:w-full m-main-product--media"{% if image_placement == 'right' %} style="order:2;"{% endif %}>
        {% unless section_onboarding %}
          {% render 'product-media', section: section, media_layout: 'layout-4', product: product %}
        {% else %}
          <div
            class="{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}"
            style="--aspect-ratio: 1/1;"
          >
            {{ 'product-1' | placeholder_svg_tag: 'm-placeholder-svg m:object-cover' }}
          </div>
        {% endunless %}
      </div>
      <div class="m:column md:m:w-1/2 m:w-full m-main-product--info{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
        {% if section_onboarding %}
          {{ onboarding }}
        {% else %}
          <div class="m-product-info--wrapper m:text-color-body">
            {% render 'main-product-blocks',
              product: product,
              section: section,
              update_browser_history: false,
              is_featured: true
            %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% if product.media.size > 0 %}
  <script src="{{ 'product-media.js' | asset_url }}" defer="defer"></script>
{% endif %}
{%- if first_3d_model -%}
  <script src="{{ 'product-model.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{% if product.options_with_values.size > 0 %}
  <script src="{{ 'variant-picker.js' | asset_url }}" defer="defer"></script>
{% endif %}

{% if product != blank %}
  {% render 'product-data', product: product %}
{% endif %}
